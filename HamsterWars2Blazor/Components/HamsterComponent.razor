@using Entities.Models
@using HamsterWars2Blazor.Pages

@if (@hamster.isActive == false)
{
    <div class="">
        <div class="card card-goodies ">
            <img class="card-img-top mt-2 hamster-bild-small "
             src="">
            <div class="card-body ">
                <h5 class="card-title">@hamster.Name</h5>
                <p class="card-text">
                    This Hamster has been Deleted.
                </p>
            </div>
        </div>
    </div>
}
else
{
    <a class="btn @setSize " href="/profile/@hamster.Id">
        <div class=" card card-goodies card-hover "
         style="background-color:@color">
            <img class="card-img-top mt-2 @pictureSize"
             src="@hamster.ImgName" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@hamster.Name</h5>
                <p class="card-text">
                    Wins: @hamster.Wins
                    <br />
                    Defeats: @hamster.Losses
                    <br />
                    Games: @hamster.Games
                    @if (IsProfile)
                    {
                        <span>
                            <br />
                            Age: @hamster.Age
                            <br />
                            Favourite Food: @hamster.FavFood
                            <br />
                            Loves: @hamster.Loves
                        </span>
                    }
                </p>
            </div>
        </div>
    </a>
}


@code {
    [Parameter]
    public Hamster hamster { get; set; }
    [Parameter]
    public bool IsProfile { get; set; } = false;
    [Parameter]
    public string IsWinner { get; set; }
    public string color;
    public string pictureSize;
    [Parameter]
    public bool SetSizeBool { get; set; }
    private string setSize;

    protected override void OnInitialized()
    {
        if (IsWinner == "win")
        {
            color = "yellowgreen";
        }
        else if (IsWinner == "loss")
        {
            color = " #F04520";
        }
        else
        {
            color = "teal";
        }
        if (IsProfile)
        {
            pictureSize = "hamster-bild";
        }
        else
        {
            pictureSize = "hamster-bild-small";
        }
        if (SetSizeBool)
        {
            setSize = "";
        }
        else
        {
            setSize = "col-sm-4";
        }
    }
}
