                </div>
            </a>
        </div>
    </div>
</div>
@*---------FlipCard----Add------*@
<div class="flip-box m-5">
    <div class="flip-box-inner ">
        <div class="flip-box-front borderRad">
            <img src="/images/cards/add.png" alt="add" style="width:500px;height:400px" class="borderRad">
        </div>

        <div class="flip-box-back borderRad card">

            <a href="/create" class="text-decoration-none card-body">
                <div>
                    <h2 class="card-header">Add Hamster</h2>
                    <p class="card-text">Click Here to add your own Hamster to the collection</p>
                </div>
            </a>
        </div>
    </div>
