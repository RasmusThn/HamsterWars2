@page "/"
@using Entities.Models
@using HamsterWars2Blazor.Service

<PageTitle>Home</PageTitle>
<div class="text-center">
    <h1><strong>HAMSTER WARS 2</strong></h1>
</div>
<div class="row justify-content-center">
@*---------FlipCard----Battle------*@
<div class="flip-box m-5">
    <div class="flip-box-inner ">
        <div class="flip-box-front borderRad">
            <img src="/images/cards/War.jpg" alt="Battle" style="width:500px;height:400px" class="borderRad">
        </div>

        <div class="flip-box-back borderRad card">

            <a href="/battle" class="text-decoration-none card-body">
                <div>
                    <h2 class="card-header">Battle</h2>
                    <p class="card-text">Click Here to go to the Battle</p>
                    <p class="card-footer">To Choose which hamster is the cutest</p>
                </div>
            </a>
        </div>
    </div>
</div>
